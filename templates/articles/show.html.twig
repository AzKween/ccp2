{% extends 'base.admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row mt-4">
        <h1>Articles</h1>
    </div>
    <div class="row mt-3">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.Name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.Price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.Description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ article.picture }}</td>
            </tr>
        </tbody>
    </table>
    </div>
        <div class='row mt-3'>
            <a class="text-primary" href="{{ path('articles_index') }}">back to list</a>
        </div>
        <div class='row mt-3'>
            <a class="text-success" href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>
        </div>
        <div class='row mt-3'>
            {{ include('articles/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
