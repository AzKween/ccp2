{% extends 'base.admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row mt-4">
        <h1>Ordered</h1>
    </div>
    <div class="row mt-3">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ordered.id }}</td>
            </tr>
            <tr>
                <th>Articles</th>
                <td>{{ ordered.Articles }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ ordered.Total }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ordered.Date ? ordered.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Num_Ordered</th>
                <td>{{ ordered.NumOrdered }}</td>
            </tr>
            <tr>
                <th>Delivery_Address</th>
                <td>{{ ordered.DeliveryAddress }}</td>
            </tr>
            <tr>
                <th>Billing_Address</th>
                <td>{{ ordered.BillingAddress }}</td>
            </tr>
        </tbody>
    </table>
    </div>
        <div class='row mt-3'>
            <a class="text-primary" href="{{ path('ordered_index') }}">back to list</a>
        </div>
        <div class='row mt-3'>
            <a class="text-success" href="{{ path('ordered_edit', {'id': ordered.id}) }}">edit</a>
        </div>
        <div class='row mt-3'>
            {{ include('ordered/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
