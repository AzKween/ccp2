{% extends 'base.admin.html.twig' %}

{% block body %}
    <div class='container'>
        <table class='table'>
            <thead>
                <th>E-mail</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Actions</th>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.subject }}</td>
                    <td>{{ contact.text }}</td>
                    <td>{{ include('in_box/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
