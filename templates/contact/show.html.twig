{% extends 'base.admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row mt-4">
        <h1>Contact</h1>
    </div>
    <div class="row mt-3">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Full_Name</th>
                <td>{{ contact.FullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.Email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.Subject }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ contact.Text }}</td>
            </tr>
        </tbody>
    </table>
    </div>
        <div class='row mt-3'>
            <a class="text-primary" href="{{ path('contact_index') }}">back to list</a>
        </div>
        <div class='row mt-3'>
            <a class="text-success" href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
        </div>
        <div class='row mt-3'>
            {{ include('contact/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
