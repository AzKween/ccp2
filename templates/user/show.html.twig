{% extends 'base.admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row mt-4">
    <h1>User</h1>
    </div>
    <div class="row mt-3">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Last_Name</th>
                <td>{{ user.LastName }}</td>
            </tr>
            <tr>
                <th>First_Name</th>
                <td>{{ user.FirstName }}</td>
            </tr>
            <tr>
                <th>Date_Of_Birth</th>
                <td>{{ user.DateOfBirth ? user.DateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.Address }}</td>
            </tr>
            <tr>
                <th>Postal_Code</th>
                <td>{{ user.zip }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.City }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class='row mt-3'>
    <a class="text-primary" href="{{ path('user_index') }}">back to list</a>
    </div>
    <div class='row mt-3'>
    <a class="text-success" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
    </div>
    <div class='row mt-3'>
    {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
