{% extends 'base.admin.html.twig' %}



{% block body %}
    <h1 class='mt-4'>User index</h1>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Last_Name</th>
                <th>First_Name</th>
                <th>Date_Of_Birth</th>
                <th>Address</th>
                <th>Postal_Code</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.LastName }}</td>
                <td>{{ user.FirstName }}</td>
                <td>{{ user.DateOfBirth ? user.DateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ user.Address }}</td>
                <td>{{ user.zip }}</td>
                <td>{{ user.City }}</td>
                <td>
                    <a class="text-primary mr-3" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="text-info" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
